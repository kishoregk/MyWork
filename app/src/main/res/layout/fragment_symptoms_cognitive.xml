<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cognitive"
            android:textSize="23sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"/>


        <!--Cognitive Linear Layout-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <!--Feeling foggy Layout-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:paddingLeft="5dp"
                    android:paddingRight="2dp"
                    android:text="@string/feeling_mentally_foggy"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    />

                <RadioGroup
                    android:id="@+id/radioGrp_feeling_foggy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal" android:gravity="center_vertical">
                    <RadioButton
                        android:id="@+id/rdBtn_yes_foggy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textColor="@android:color/background_dark"/>

                    <RadioButton
                        android:id="@+id/rdBtn_no_foggy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        android:textColor="@android:color/background_dark"
                        android:layout_marginLeft="4dp"
                        />

                </RadioGroup>

            </LinearLayout>

            <!--feeling slowed down Layout-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:paddingLeft="5dp"
                    android:paddingRight="2dp"
                    android:text="@string/feeling_slowed_down"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    />

                <RadioGroup
                    android:id="@+id/radioGrp_feeling_slowed_down"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rdBtn_yes_slowed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textColor="@android:color/background_dark"/>

                    <RadioButton
                        android:id="@+id/rdBtn_no_slowed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        android:textColor="@android:color/background_dark"
                        android:layout_marginLeft="4dp"
                        />

                </RadioGroup>

            </LinearLayout>

            <!--Diiculty conc Layout-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:paddingLeft="5dp"
                    android:paddingRight="2dp"
                    android:text="@string/difficulty_concentrating"
                    android:textSize="20sp"
                    android:textColor="@android:color/background_dark"
                    />

                <RadioGroup
                    android:id="@+id/radioGrp_difficulty_concentrating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rdBtn_yes_difficulty_concentrating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textColor="@android:color/background_dark"/>

                    <RadioButton
                        android:id="@+id/rdBtn_no_difficulty_concentrating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        android:textColor="@android:color/background_dark"
                        android:layout_marginLeft="4dp"
                        />

                </RadioGroup>

            </LinearLayout>

            <!--Difficulty Remembering Layout-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:paddingLeft="5dp"
                    android:paddingRight="2dp"
                    android:text="@string/difficulty_remembering"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    />

                <RadioGroup
                    android:id="@+id/radioGrp_difficulty_remembering"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rdBtn_yes_difficulty_remembering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes" />

                    <RadioButton
                        android:id="@+id/rdBtn_no_difficulty_remembering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        android:textColor="@android:color/background_dark"
                        android:layout_marginLeft="4dp"
                        />

                </RadioGroup>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_next_symptoms"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:text="Next"
                    android:textColor="@android:color/background_dark"
                    />
            </LinearLayout>
            <!--physical symptoms layout-->
        </LinearLayout>


    </LinearLayout>
</ScrollView>